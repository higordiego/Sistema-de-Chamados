<script src="../../controllers/chamados.js"></script>
<div class="container" ng-controller="tecnicoCtrl">
  <div class="row">
    <div class="col-md-12">
      <h4>Lista de Chamados</h4>
      <div class="table-responsive">
        <table id="mytable" class="table table-bordred table-striped">
          <thead>
            <th>Prioridade</th>
            <th>Usuário</th>
            <th>Problema</th>
            <th>Observação</th>
            <th>Email </th>
            <th>Editar</th>
            <th>Agendar</th>
          </thead>
          <tbody>
            <tr ng-repeat="chamados in chamadoslist">
              <td> {{chamados.prioridade}} </td>
              <td> {{chamados.user.nome}} </td>
              <td> {{chamados.problema}} </td>
              <td> {{chamados.observacao}} </td>
              <td> {{chamados.user.email}} </td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Edit">
                  <button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" >
                    <span class="glyphicon glyphicon-hdd"></span>
                  </button>
                </p>
                <!-- Aqui é modal editar -->
                <div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <div class="container">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                          <h4 class="modal-title custom_align">Solução</h4>
                        </div>
                      </div>
                      <div class="modal-body">
                        <textarea rows="6" class="form-control" ng-model="chamados.solucao" name="solucao" required></textarea>
                      </div>
                      <div class="modal-footer ">
                        <button type="submit" class="btn btn-primary" ng-click="solucao(chamados)" data-dismiss="modal"> Salvar </button>
                      </div>
                    </div>
                  </td>
                  <!-- Aqui é modal deletar -->
                  <td><p data-placement="top" data-toggle="tooltip" title="Delete">
                    <button class="btn btn-info-outline btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" >
                      <span class="glyphicon glyphicon-time"></span>
                    </button>
                  </p>
                  <div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                          <h4 class="modal-title custom_align" id="Heading">Agendamento </h4>
                        </div>
                        <div class="modal-body">
                          Data <input type="date" class="form-control" name="data" placeholder="Horário de Agendamento"/> </br>
                          Horário <input type="time" class="form-control" name="data" placeholder="Horário de Agendamento"/> </br>
                        </div>
                        <div class="modal-footer ">
                          <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
